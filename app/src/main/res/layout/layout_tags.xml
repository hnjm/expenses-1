<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_red"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_blue"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_yellow"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_green"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_orange"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_violet"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_grey"
        app:srcCompat="@drawable/dot" />

    <ImageView
        android:id="@+id/brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:contentDescription="@string/description_color"
        android:tint="@color/tag_brown"
        app:srcCompat="@drawable/dot" />
</LinearLayout>
